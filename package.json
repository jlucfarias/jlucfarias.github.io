{
  "name": "jlucfarias.github.io",
  "version": "1.0.0",
  "description": "A simple note-taking and thought-dumping blog",
  "type": "module",
  "scripts": {
    "prod": "NODE_ENV=production npx tailwindcss -i styles/styles.css -o static/styles/styles.css --minify",
    "build": "zola build",
    "dev": "zola serve",
    "dev:watch": "npx tailwindcss -i styles/styles.css -o static/styles/styles.css --watch",
    "puppeteer": "node ./puppeteer.js",
    "generate:preview": "npm-run-all -p -r dev puppeteer"
  },
  "author": "Jo√£o Lucas Farias",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^24.2.1",
    "tailwindcss": "^3.4.17"
  }
}
